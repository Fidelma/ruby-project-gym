<form id="edit-session" action="/gym/sessions/<%= @session.id%>" method="post">
  <label for="type">Type:</label>
  <input type="text" name="type" id="session-type" value="<%= @session.type %>">

  <label for="start-time">Start time:</label>
  <input type="text" name="start_time" id="session-start-time" value="<%= @session.start_time %>">

  <label for="duration">Duration:</label>
  <input type="text" name="duration" id="session-duration" value="<%= @session.duration %>">

  <input type="submit" value="Update Session">

</form>
