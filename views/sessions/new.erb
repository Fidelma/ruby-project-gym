<form id="new-session" action="/gym/sessions" method="post">

  <label for="type">Type:</label>
  <input type="text" name="type" id="sessions-type">

  <label for="start-time">Start time:</label>
  <input type="text" name="start_time" id="start-time">

  <label for="peak">Peak</label>
  <input type="radio" name="peak" value="peak" id="peak">
  <label for="off-peak">Off-peak</label>
  <input type="radio" name="peak" value="off-peak" id="off-peak">

  <label for="duration">Duration:</label>
  <input type="text" name="duration" id="session-duration">

  <label for="capacity">Capacity:</label>
  <input type="number" name="capacity" id="session-capacity">

  <input type="submit" value="Add new session">

</form>
